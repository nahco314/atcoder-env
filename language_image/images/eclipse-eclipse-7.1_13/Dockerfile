# syntax=docker/dockerfile:1.4.1

# generated by dockerfile_gen.py

# DOCKER_BUILDKIT=1 docker build ...

FROM ubuntu:23.04

SHELL ["/bin/bash", "-c"]

RUN apt-get update

RUN apt install sudo adduser

RUN adduser runner && \
    echo '%runner ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers
USER runner

RUN sudo ln -sf /usr/share/zoneinfo/Asia/Tokyo /etc/localtime
ENV DEBIAN_FRONTEND=noninteractive DEBCONF_NONINTERACTIVE_SEEN=true

RUN sudo apt install -y wget unzip xz-utils curl

RUN sudo mkdir /judge --mode=777

WORKDIR /judge


RUN <<EOF

mkdir eclipse
wget https://eclipseclp.org/Distribution/Builds/7.1_13/x86_64_linux/eclipse_basic.tgz
tar xpfz eclipse_basic.tgz -C eclipse
rm eclipse_basic.tgz
cd eclipse/
yes """" | ./RUNME --no-docs
# tk, javaは無視

# eplex
# /judge/eclipse内で
wget https://eclipseclp.org/Distribution/Builds/7.1_13/x86_64_linux/if_osiclpcbc.tgz
tar xpfz if_osiclpcbc.tgz
rm if_osiclpcbc.tgz

EOF



COPY --chmod=777 run.bash /tmp/run.bash
