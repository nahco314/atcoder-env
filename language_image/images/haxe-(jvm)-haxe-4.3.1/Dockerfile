# syntax=docker/dockerfile:1.4.1

# generated by dockerfile_gen.py

# DOCKER_BUILDKIT=1 docker build ...

FROM ubuntu:23.04

SHELL ["/bin/bash", "-c"]

RUN apt-get update

RUN apt install sudo adduser

RUN adduser runner && \
    echo '%runner ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers
USER runner

RUN sudo ln -sf /usr/share/zoneinfo/Asia/Tokyo /etc/localtime
ENV DEBIAN_FRONTEND=noninteractive DEBCONF_NONINTERACTIVE_SEEN=true

RUN sudo apt install -y wget unzip xz-utils curl

RUN sudo mkdir /judge --mode=777

WORKDIR /judge


RUN <<EOF

sudo apt-get update
sudo apt install -y neko openjdk-19-jre-headless wget
wget https://github.com/HaxeFoundation/haxe/releases/download/4.3.1/haxe-4.3.1-linux64.tar.gz
sudo tar -C /opt -xf haxe-4.3.1-linux64.tar.gz                  
export PATH=/opt/haxe_20230428195743_964c84c:$PATH
mkdir ~/haxelib && haxelib setup ~/haxelib
haxelib install hxjava

EOF



COPY --chmod=777 run.bash /tmp/run.bash
